<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Route" table="route" schema="scm">
        <id name="routeId">
            <column name="route_id" sql-type="int(5)"/>
        </id>
        <property name="departureLocalityId">
            <column name="departure_locality_id" sql-type="int(5)"/>
        </property>
        <property name="destinationLocalityId">
            <column name="destination_locality_id" sql-type="int(5)"/>
        </property>
        <many-to-one name="localityByDepartureLocalityId" class="model.Locality">
            <column name="departure_locality_id"/>
        </many-to-one>
        <many-to-one name="localityByDestinationLocalityId" class="model.Locality">
            <column name="destination_locality_id"/>
        </many-to-one>
        <set name="ticketsByRouteId" inverse="true">
            <key>
                <column name="route_id"/>
            </key>
            <one-to-many not-found="ignore" class="model.Ticket"/>
        </set>
        <set name="waypointsByRouteId" inverse="true">
            <key>
                <column name="route_id"/>
            </key>
            <one-to-many not-found="ignore" class="model.Waypoint"/>
        </set>
    </class>
</hibernate-mapping>