<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.scm.services.model.Carrier" table="carrier" schema="scm">
        <id name="carrierId">
            <column name="carrier_id" sql-type="int(5)"/>
        </id>
        <property name="carrierName">
            <column name="carrier_name" sql-type="varchar(60)" length="60"/>
        </property>
        <property name="carrierDesc">
            <column name="carrier_desc" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="carrierPhone">
            <column name="carrier_phone" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <!--<property name="userId">
            <column name="user_id" sql-type="int(5)"/>
        </property>-->
        <many-to-one name="userByUserId" class="com.scm.services.model.User">
            <column name="user_id"/>
        </many-to-one>
        <set name="ratesByCarrierId" inverse="true">
            <key>
                <column name="carrier_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.scm.services.model.Rate"/>
        </set>
        <set name="transportationByCarrierId" inverse="true">
            <key>
                <column name="carrier_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.scm.services.model.Transportation"/>
        </set>
    </class>
</hibernate-mapping>