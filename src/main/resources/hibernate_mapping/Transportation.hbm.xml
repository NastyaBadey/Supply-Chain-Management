<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Transportation" table="transportation" schema="scm">
        <id name="transportationId">
            <column name="transportation_id" sql-type="int(5)"/>
        </id>
        <property name="ticketId">
            <column name="ticket_id" sql-type="int(5)"/>
        </property>
        <property name="carrierId">
            <column name="carrier_id" sql-type="int(5)"/>
        </property>
        <property name="status">
            <column name="status" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="departureDate">
            <column name="departure_date" sql-type="datetime"/>
        </property>
        <property name="destinationDate">
            <column name="destination_date" sql-type="datetime"/>
        </property>
        <property name="totalCost">
            <column name="total_cost" sql-type="float(10,2)" precision="10" scale="2"/>
        </property>
        <many-to-one name="ticketByTicketId" class="model.Ticket">
            <column name="ticket_id"/>
        </many-to-one>
        <many-to-one name="carrierByCarrierId" class="model.Carrier">
            <column name="carrier_id"/>
        </many-to-one>
        <set name="transportationWaypointsByTransportationId" inverse="true">
            <key>
                <column name="transportation_id"/>
            </key>
            <one-to-many not-found="ignore" class="model.TransportationWaypoint"/>
        </set>
    </class>
</hibernate-mapping>